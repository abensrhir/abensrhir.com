{{!< default}}


        <div class="container clearfix">
          <main role="main" class="content">
              {{#foreach posts}}  
              <article class="{{post_class}} post">
                <h2><a href="{{url}}" title="{{title}}">{{title}}</a></h2>
                <footer class="post-info">Posted on <span class="post-meta"><time datetime="{{date published_at format="YYYY-MM-DD"}}">{{date published_at format="Do MMMM YYYY"}}</time> {{tags separator=", " prefix="Tagged in "}}</span></footer>
                
                <p>{{excerpt characters="600"}}&hellip;</p>
                
                <a href="{{url}}" title="{{title}}">Read more &raquo;</a>
              </article>
              {{/foreach}}

              {{pagination}}
             
          </main>
          


          <aside class="author">
            
            <img class="profile-image" src="{{asset "img/profile-image.jpg"}}" alt="" />
            <p class="name">by <strong>Anass Bensrhir</strong></p>
            <p class="address">Paris, France</p>
            <p class="link"><a href="http://abensrhir.com" title="Anass Bensrhir - Data Scientist">abensrhir.com</a></p>

            <ul class="social">
              <li><a class="icon-twitter" href="http://twitter.com/anassbensrhir" title="Follow me on Twitter"></a></li>
              <li><a class="icon-github" href="https://github.com/abensrhir" title="See what I'm working on Github"></a></li>
              <li><a class="icon-linkedin" href="https://ma.linkedin.com/in/abensrhir" title="Connect with me on Linkedin"></a></li>
            </ul>

          </aside>
        </div>
